{
    "name": "app",
    "version": "1.0.0",
    "main": "dist/app.bundle.js",
    "license": "MIT",
    "scripts": {
        "build:dev": "webpack-cli --config ./scripts/webpack/webpack.development.config.ts",
        "build:prod": "webpack-cli --config ./scripts/webpack/webpack.production.config.ts",
        "test": "jest",
        "lint": "tslint --project . ./src/**/*.ts"
    },
    "devDependencies": {
        "@types/jest": "^23.3.7",
        "@types/node": "^10.12.0",
        "@types/uglifyjs-webpack-plugin": "^1.1.0",
        "@types/webpack": "^4.4.17",
        "@types/webpack-merge": "^4.1.3",
        "@types/webpack-node-externals": "^1.6.3",
        "jest": "^23.6.0",
        "prettier": "^1.14.3",
        "ts-jest": "^23.10.4",
        "ts-loader": "^5.2.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^3.1.3",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.23.1",
        "webpack-cli": "^3.1.2",
        "webpack-merge": "^4.1.4",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "@/(.*)": "<rootDir>/src/$1"
        }
    }
}
